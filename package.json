{
  "name": "tradebinder",
  "version": "1.0.0",
  "description": "MTG Card Trading E-commerce Platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "workers:dev": "wrangler dev",
    "workers:deploy": "wrangler deploy",
    "db:create": "wrangler d1 create tradebinder-db",
    "db:migrate": "wrangler d1 migrations apply tradebinder-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply tradebinder-db --remote",
    "db:seed": "wrangler d1 execute tradebinder-db --local --file=./db/seed.sql"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "zustand": "^4.4.7",
    "@tanstack/react-query": "^5.17.0",
    "hono": "^3.12.0",
    "zod": "^3.22.4",
    "jose": "^5.2.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.11",
    "wrangler": "^3.22.0",
    "typescript": "^5.3.3",
    "@cloudflare/workers-types": "^4.20231218.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  }
}